package interaction;

public class Buyer {
	//구매자는 money(소지금), mango(소지망고개수)를 멤버 변수로 가집니다.
	private int money;
	private int mango;
	//생성자에는 돈을 받아 소지금을 초기화해주고 망고는 0으로 초기화합니다.
	
	public Buyer() {
		this.money = 0;
		this.mango = 0;
	}
	//showBuyer()를 이용해 소지망고, 소지금을 볼 수 있습니다.
	public void showBuyer() {
		System.out.println("---------구매자 정보-------");
		System.out.println("현재 소지금 : " + this.money +
					", 현재 망고 개수 : " + this.mango);
	}
}
